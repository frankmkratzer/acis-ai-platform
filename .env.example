# ACIS AI Platform - Environment Configuration Template
# Copy this file to .env and fill in your actual values
# NEVER commit .env file to git - it contains sensitive credentials!

# ============================================================================
# Database Configuration
# ============================================================================
DB_HOST=localhost
DB_PORT=5432
DB_NAME=acis-ai
DB_USER=postgres
DB_PASSWORD=your_secure_database_password_here

# Database URL (constructed from above, or set directly)
POSTGRES_URL=postgresql+psycopg2://postgres:your_password@localhost:5432/acis-ai

# ============================================================================
# Authentication & Security
# ============================================================================
# Admin user credentials (bcrypt hashed password)
ADMIN_EMAIL=admin@acis-ai.com
ADMIN_PASSWORD_HASH=bcrypt_hash_of_your_password_here

# JWT Configuration
JWT_SECRET_KEY=generate_a_strong_random_secret_key_here
JWT_ALGORITHM=HS256
JWT_EXPIRATION_MINUTES=30

# ============================================================================
# External API Keys
# ============================================================================

# Polygon.io (Market Data)
POLYGON_API_KEY=your_polygon_api_key_here
POLYGON_S3_ACCESS_KEY_ID=your_polygon_s3_key_here
POLYGON_S3_SECRET_ACCESS_KEY=your_polygon_s3_secret_here
POLYGON_S3_ENDPOINT=https://files.polygon.io
POLYGON_S3_BUCKET=flatfiles
POLYGON_ACCESS_KEY_ID=your_polygon_access_key_here
POLYGON_SECRET_ACCESS_KEY=your_polygon_secret_here
POLYGON_BUCKET=flatfiles

# Anthropic Claude API (optional)
# ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Cursor API
CURSOR_API_KEY=your_cursor_api_key_here

# DigitalOcean
DIGITALOCEAN_TOKEN=your_digitalocean_token_here

# GitHub
GITHUB_TOKEN=your_github_token_here

# ============================================================================
# Brokerage Configuration
# ============================================================================
DEFAULT_BROKER=schwab

# Schwab/TD Ameritrade
SCHWAB_APP_KEY=your_schwab_app_key_here
SCHWAB_APP_SECRET=your_schwab_app_secret_here
SCHWAB_CLIENT_ID=your_schwab_client_id_here
SCHWAB_CLIENT_SECRET=your_schwab_client_secret_here
SCHWAB_CALLBACK_URL=https://your_domain.ngrok.app
SCHWAB_REDIRECT_URI=https://your_domain.ngrok.app
SCHWAB_ACCOUNT_ID=your_account_id_or_auto_detect

# Trading Encryption
TRADING_ENCRYPTION_KEY=generate_a_fernet_key_here

# OAuth tokens are stored in database (brokerage_oauth_tokens table)

# ============================================================================
# Ngrok Configuration (for OAuth callbacks)
# ============================================================================
NGROK_AUTH_TOKEN=your_ngrok_auth_token_here
NGROK_DOMAIN=your_domain.ngrok.app
NGROK_LOCAL_PORT=8182

# ============================================================================
# Feature Flags
# ============================================================================
ENABLE_ML=true           # Set to true to enable XGBoost machine learning predictions
ENABLE_DL=true           # Set to true to enable LSTM deep learning (requires GPU)
ENABLE_OPTIMIZATION=true # Set to true to enable walk-forward optimization (takes 2+ hours)

# ============================================================================
# Performance Tuning
# ============================================================================
TECH_THREADS=12          # Thread pool size for technical indicators
FUND_FLUSH_ROWS=80000    # Batch size for fundamentals DB flush
FUND_FLUSH_SECS=20       # Time interval for fundamentals DB flush
TECH_BATCH_SIZE=500      # Batch size for technical indicator processing

# ============================================================================
# Logging Configuration
# ============================================================================
AI_LOG_LEVEL=INFO
AI_LOG_JSON=0
AI_LOG_TO_FILE=0
AI_LOG_FILE=ai_value_score.log
VALUE_SCORE_LATEST=0

# ============================================================================
# DGX Spark Remote GPU Server Configuration
# ============================================================================
DGX_HOST=your_dgx_hostname
DGX_USER=your_username
DGX_PASSWORD=your_dgx_password
DGX_REMOTE_PATH=/home/your_username/acis-ai-platform
DGX_SSH_PORT=22

# ============================================================================
# How to Generate Secure Keys:
# ============================================================================
#
# Generate JWT Secret Key (Python):
#   python -c "import secrets; print(secrets.token_urlsafe(32))"
#
# Generate Fernet Key (Python):
#   python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
#
# Generate bcrypt password hash (Python):
#   python -c "from passlib.context import CryptContext; pwd_context = CryptContext(schemes=['bcrypt']); print(pwd_context.hash('your_password'))"
#
# ============================================================================
